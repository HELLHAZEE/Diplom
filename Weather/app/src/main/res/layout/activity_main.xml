<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral30"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="100sp"
        android:backgroundTint="@color/colorAccent"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColorHint" />

    <Button
        android:id="@+id/main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_field"
        android:layout_marginHorizontal="130sp"
        android:layout_marginTop="20sp"
        android:background="?attr/elevationOverlayColor"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/main_btn" />

    <TextView
        android:id="@+id/result_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_btn"
        android:layout_marginTop="-205dp"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/result_info"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_field"
        android:layout_marginTop="98dp"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/result_humidiat"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_info"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/result_wind"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_field"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="-2dp"
        android:layout_toEndOf="@+id/result_info"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/result_pressure"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_wind"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="7dp"
        android:layout_toEndOf="@+id/result_humidiat"
        android:textAlignment="center"
        android:textColor="@color/textColorHint"
        android:textSize="25sp" />

    <Button
        android:id="@+id/main_btn_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_pressure"
        android:layout_marginHorizontal="130sp"
        android:layout_marginTop="103dp"
        android:background="?attr/elevationOverlayColor"
        android:backgroundTint="@color/colorAccent"
        android:text="Вернуться" />

</RelativeLayout>